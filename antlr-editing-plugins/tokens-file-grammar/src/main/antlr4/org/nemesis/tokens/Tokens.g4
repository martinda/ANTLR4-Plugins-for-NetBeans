grammar Tokens;

options
   { tokenVocab = TokensLexer; }

token_declarations :
    line*
    ;

// A line may be  empty and file also
// A line may terminate by end of file
line :
    token_declaration (CR | EOF)
    ;

// No whitespace before token id and token literal but it is allowed to put
// whitespace elsewhere
token_declaration :
    (TOKEN_ID | TOKEN_LITERAL ) WS*
    EQUAL WS*
    TOKEN_VALUE WS*
    ;
