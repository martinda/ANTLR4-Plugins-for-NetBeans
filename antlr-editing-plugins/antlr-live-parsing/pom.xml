<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.nemesis</groupId>
        <artifactId>antlr-editor-plugins-parent</artifactId>
        <version>2.0</version>
    </parent>
    <artifactId>antlr-live-parsing</artifactId>
    <packaging>nbm</packaging>
    <properties>
        <maven.test.skip>false</maven.test.skip>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.antlr</groupId>
                <artifactId>antlr4-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>antlr</id>
                        <goals>
                            <goal>antlr4</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <visitor>true</visitor>
                            <listener>true</listener>
                            <options>
                                <language>Java</language>
                            </options>
                            <arguments>
                                <!-- Enables Netbeans output error hyperlinking
                                to work -->
                                <argument>-message-format</argument>
                                <argument>gnu</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.netbeans.utilities</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <moduleType>autoload</moduleType>
                    <verifyRuntime>false</verifyRuntime>
                    <publicPackages>
                        <publicPackage>org.nemesis.antlr.live.parsing</publicPackage>
                        <publicPackage>org.nemesis.antlr.live.parsing.extract</publicPackage>
                    </publicPackages>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-extractor-source</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <target name="copy-antlr-sources">
                                <echo>Copying ParserExtractor.java to ParserExtractor.template</echo>
                                <mkdir dir="${basedir}/src/main/resources/org/nemesis/antlr/live/parsing/extract"/>
                                <mkdir dir="${basedir}/target/classes/org/nemesis/antlr/live/parsing/extract"/>
                                <copy file="${basedir}/src/main/java/org/nemesis/antlr/live/parsing/extract/ParserExtractor.java"
                                      outputencoding="UTF-8"
                                      tofile="${basedir}/target/classes/org/nemesis/antlr/live/parsing/extract/ParserExtractor.template">
                                </copy>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
